{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "@dcloudio/types",
      "@types/html5plus",
      "@types/uni-app"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "vueCompilerOptions": {
    "globalTypesPath": "./typings/auto-imports.d.ts"
  },
  "include": [
    "src/**/*",
    "pages/**/*",
    "components/**/*",
    "typings/**/*",
    "*.vue",
    "*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}